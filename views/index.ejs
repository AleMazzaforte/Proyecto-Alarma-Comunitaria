<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alarma U2 Sur</title>
    
    <style>
                    :root {
            --color1: #6c4536;
            --color2: #58392e;
            --color3: #845f43;
            --color4: #bb945b;
            --color5: #d6c573;
        }

        #headerIndex {
            background-color: var(--color1);
            color: rgb(12, 12, 12);
        }

        /* Estilos para el label crear */
        #crearUsuario {
            width: 90%; /* Predeterminado al 90% de ancho para pantallas más pequeñas */
            max-width: 300px;
            padding: 10px;
            margin: 0 auto;
        }

        .fomInputCrear {
            display: flex;
            flex-wrap: wrap;
        }

        input {
            width: 100%; /* Predeterminado al 100% de ancho para pantallas más pequeñas */
            height: 30px;
            margin-bottom: 5px;
        }

        /* Estilos generales para la tabla */
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            font-size: 16px;
            text-align: left;
        }

        /* Estilo para las celdas de encabezado */
        th {
            background-color: var(--color3);
            color: white;
            padding: 8px;
        }

        /* Estilo para las celdas de datos */
        td {
            padding: 8px;
            border-bottom: 1px solid #ddd;
        }

        /* Estilo para filas impares */
        tr:nth-child(even) {
            background-color: var(--color4);
        }

        tr:nth-child(odd) {
            background-color: var(--color5);
        }

        /* Estilo para filas al pasar el mouse por encima */
        tr:hover {
            background-color: #f1f1f1;
        }

        body {
            background-color: #717D7E;
        }

        h1 {
            background-color: #4c2a1e;
            color: lightgray;
        }

        /* Media Queries para pantallas más grandes */
        @media (min-width: 768px) {
            #crearUsuario {
                width: 50%;
            }

            input {
                width: 80%;
            }

            table {
                font-size: 18px;
            }
        }

        /* Media Queries para pantallas muy grandes */
        @media (min-width: 1200px) {
            #crearUsuario {
                width: 30%;
            }

            input {
                width: 70%;
            }

            table {
                font-size: 20px;
            }
        }
        a {
            color: black;
        }

    </style>
</head>
<body>
    <header id="headerIndex">
        <h1>Alarma U 2 Sur</h1>
        <a href="./">Inicio</a>
        <a href="/admin">Administradores</a>
        
    </header>
   
   
    
    
    <div id="listado">
        <h1>Listado</h1>
        <table border="1">
            <thead>
                <tr>
                    <th>Número de control</th>
                    <th>Lote</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th>Nombre</th>
                </tr>
            </thead>
            <tbody id="tBody">
            
            </tbody>
        </table>

    </div>

   
    <script>
        
document.addEventListener('DOMContentLoaded', () => {
    fetch('/api/data')
        .then(response => response.json())
        .then(data => {
            const tbody = document.getElementById('tBody');
            data.forEach(item => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${item.control}</td>
                    <td>${item.lote}</td>
                    <td>${item.direccion}</td>
                    <td>${item.telefono}</td>
                    <td>${item.nombre}</td>
                `;
                tbody.appendChild(row);
            });
        })
        .catch(error => console.error('Error fetching data:', error));
});

    </script>
</body>
</html>
